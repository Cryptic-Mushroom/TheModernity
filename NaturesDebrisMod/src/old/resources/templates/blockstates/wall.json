{
  "multipart": [
    {
      "when": { "up": "true" },
      "apply": { "model": "$[post_name]" }
    },
    {
      "when": { "north": "true" },
      "apply": { "model": "$[side_name]", "uvlock": true }
    },
    {
      "when": { "east": "true" },
      "apply": { "model": "$[side_name]", "y": 90, "uvlock": true }
    },
    {
      "when": { "south": "true" },
      "apply": { "model": "$[side_name]", "y": 180, "uvlock": true }
    },
    {
      "when": { "west": "true" },
      "apply": { "model": "$[side_name]", "y": 270, "uvlock": true }
    }
  ]
}
