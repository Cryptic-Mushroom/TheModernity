{
  "multipart": [
    {
      "apply": { "model": "modernity:block/inver_hedge_center" }
    },
    {
      "when": { "north": "true" },
      "apply": { "model": "modernity:block/inver_hedge_side", "uvlock": true }
    },
    {
      "when": { "east": "true" },
      "apply": { "model": "modernity:block/inver_hedge_side", "y": 90, "uvlock": true }
    },
    {
      "when": { "south": "true" },
      "apply": { "model": "modernity:block/inver_hedge_side", "y": 180, "uvlock": true }
    },
    {
      "when": { "west": "true" },
      "apply": { "model": "modernity:block/inver_hedge_side", "y": 270, "uvlock": true }
    },
    {
      "when": { "north": "false" },
      "apply": { "model": "modernity:block/inver_hedge_noside", "uvlock": true }
    },
    {
      "when": { "east": "false" },
      "apply": { "model": "modernity:block/inver_hedge_noside", "y": 90, "uvlock": true }
    },
    {
      "when": { "south": "false" },
      "apply": { "model": "modernity:block/inver_hedge_noside", "y": 180, "uvlock": true }
    },
    {
      "when": { "west": "false" },
      "apply": { "model": "modernity:block/inver_hedge_noside", "y": 270, "uvlock": true }
    }
  ]
}
